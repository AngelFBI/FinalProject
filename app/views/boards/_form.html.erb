<%= form_with model: @board, remote: true do |f| %>
  <div class="mb-3 row">
    <%= f.label :name, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= f.label :visibility, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.select :visibility, Board.visibilities.keys.to_a%>
    </div>
  </div>

  <div class="col-auto">
    <%= f.submit class: "btn btn-success mb-3" %>
  </div>
<% end %>
