<% presenter = TaskPresenter.new(task)%>
<div class="col-sm-6 mb-3">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= link_to task.title, task %></h5>
      <div class="card-text trix-content">
        <%= task.details %>
      </div>
      <div class="card-footer mb-3">
        <small class="text-muted">
          <b>Started at: </b> <%= presenter.has_started_at? %> |
          <b>Finished at: </b> <%= presenter.has_finished_at? %> |
          <%= presenter.has_doing_time?%>
        </small>
      </div>

      <%= link_to 'Delete', task_path(task), method: :delete, data: {confirm: "Are you sure?"}, class:'btn btn-danger'%>
      <%= link_to 'Show', task_path(task), class:'btn btn-outline-info'%>
    </div>
  </div>
</div>
