<%= form_with model: @task do |f|%>
  <div class="mb-3 row">
    <%= f.label :title, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= f.label :details, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_area :details, class: "form-control" %>
    </div>
  </div>
  <div class="col-auto">
    <%= f.submit class: "btn btn-success mb-3" %>
  </div>
<% end %>
