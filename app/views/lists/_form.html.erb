<%= form_with model: [ @board, @list] do |f| %>
  <div class="mb-3 row">
    <%= f.label :name, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= f.label :color, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.select :color, [
          ['Green','success'],['Red','danger'],['Blue','info'],
          ['Yellow','warning']
        ]%>
    </div>
  </div>

  <div class="mb-3 row">
    <%= f.label :priority, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.select :priority, [
          'High', 'Medium', 'Low'
        ]%>
    </div>
  </div>

  <div class="col-auto">
    <%= f.submit class: "btn btn-success mb-3" %>
  </div>
<% end %>
